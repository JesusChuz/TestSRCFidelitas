    <link rel="stylesheet" href="~/theme-assets/vendors/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/theme-assets/css/demo.css" />
    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/theme-assets/vendors/libs/perfect-scrollbar/perfect-scrollbar.css" />
