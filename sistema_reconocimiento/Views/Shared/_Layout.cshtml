    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/theme-assets/vendors/libs/jquery/jquery.js"></script>
    <script src="~/theme-assets/vendors/libs/popper/popper.js"></script>
    <script src="~/theme-assets/vendors/js/bootstrap.js"></script>
    <script src="~/theme-assets/vendors/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/theme-assets/vendors/js/menu.js"></script>
    <!-- endbuild -->
