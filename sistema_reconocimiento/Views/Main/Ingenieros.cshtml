@model IEnumerable<sistema_reconocimiento.Models.Engineers>

@{
    ViewData["Title"] = "Ingenieros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Ingenieros</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html">Principal</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Ingenieros
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Tables start -->
            <!-- Table head options start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a asp-controller="Main" asp-action="Agregar_ingeniero" class="btn btn-danger"><i class="fas fa-plus"></i>Agregar Ingeniero</a>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li>
                                        <!-- Buscar -->
                                        <div class="navbar-nav align-items-center">
                                            <div class="nav-item d-flex align-items-center">
                                                <i class="bx bx-search fs-4 lh-0"></i>
                                                <input type="text"
                                                       class="form-control border-0 shadow-none"
                                                       placeholder="Buscar"
                                                       aria-label="Buscar" />
                                            </div>
                                        </div>
                                        <!-- /Search -->
                                    </li>
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                            </div>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="thead-default">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Manager</th>
                                            <th scope="col">Rol de usuario</th>
                                            <th scope="col">Posición</th>
                                            <th scope="col">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int contador = 1; // Variable para el contador      
                                        }
                            @foreach (var item in Model) {
                                            <tr>
                                                <th scope="row">@contador</th>
                                            <td>@Html.DisplayFor(modelItem => item.Name_Engineer)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ApplicationUser.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Manager.Name_Manager)  @Html.DisplayFor(modelItem => item.Manager.LastName_Manager)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ApplicationUser.Roles)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Positions.Position_Name)</td>
                                            <td>
                                                <a class="btn btn-danger" asp-controller="Main" asp-action="Editar_ingeniero" asp-route-id="@item.ID_Engineer"><i class="fas fa-pen"></i></a>
                                                <a class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                            </td>
                                            </tr>
                                            contador++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>