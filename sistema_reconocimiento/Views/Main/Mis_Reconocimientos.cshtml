@model IEnumerable<sistema_reconocimiento.Models.Recognitions>

@{
    ViewData["Title"] = "Mis Reconocimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int points = ViewBag.GetPoints;
    int ID_Engineer = ViewBag.GetIdEngineer;
}
<style>
    .break-word {
        word-wrap: break-word;
    }

    .list-group-item {
        max-height: 200px; /* Ajusta la altura máxima según tus necesidades */
        overflow-y: auto;
    }
</style>
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">My history</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-action="Index">Principal</a>
                            </li>
                            <li class="breadcrumb-item active">My recognitions history</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="card-body">
                <div class="row">
                    <!-- Custom content with heading -->
                    <div class="col-lg-6">
                        <h3 class="content-header-right">When I recognized someone</h3>
                        <div class="demo-inline-spacing mt-2">
                            <div class="list-group">
                                @foreach (var item in Model)
                                {
                                    if (item.Petitioner_Eng == (int?)ViewData["Login"] && (item.Recognition_State == "Approved" || item.Recognition_State == "Rejected"))
                                    {
                                        <a href="" class="list-group-item list-group-item-action flex-column align-items-start">
                                            <div class="d-flex justify-content-between w-100">
                                                <small>Sent to: @ViewData[$"RecognizedEngineerName_{item.ID_Recognition}"]</small>
                                                <small>Date: @item.Recognition_Date.ToString("dd/MMM/yyyy")</small>
                                                <small>State: @Html.DisplayFor(modelItem => item.Recognition_State)</small>
                                                <p class="mb-1 break-word">
                                                    <small>
                                                        Comments:
                                                        "@Html.DisplayFor(modelItem => item.Comment)"
                                                    </small>
                                                </p>
                                            </div>
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Custom content with heading -->
                    <div class="col-lg-6">
                        <h3 class="content-header-right">When I was recognized by someone</h3>
                        <div class="demo-inline-spacing mt-2">
                            <div class="list-group">
                                @foreach (var item in Model)
                                {
                                    if (item.Recognized_Eng == (int?)ViewData["Login"] && (item.Recognition_State == "Approved" || item.Recognition_State == "Rejected"))
                                    {
                                        <a href="" class="list-group-item list-group-item-action flex-column align-items-start">
                                            <div class="d-flex justify-content-between w-100">
                                                <small>Sent by: @ViewData[$"PetitionerEngineerName_{item.ID_Recognition}"]</small>
                                                <small>Date: @item.Recognition_Date.ToString("dd/MMM/yyyy")</small>
                                                <small>State: @Html.DisplayFor(modelItem => item.Recognition_State)</small>
                                                <p class="mb-1 break-word">
                                                    <small>
                                                        Comments:
                                                        "@Html.DisplayFor(modelItem => item.Comment)"
                                                    </small>
                                                </p>
                                            </div>
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>