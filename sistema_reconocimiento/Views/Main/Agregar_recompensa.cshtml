@{
    ViewData["Title"] = "Agregar Recompensa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="app-content content">
    <div class="card-body">
        <div class="col-md-6" style="float:none;margin:auto;">
            <div class="card mb-2">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Complete la siguiente información</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-name">Título</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-name" class="input-group-text">
                                    <i class="fas fa-pen"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-name"
                                       placeholder="Día Libre" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-lastname">Descripción</label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-lastname" class="input-group-text">
                                    <i class="fas fa-book"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-lastname"
                                       placeholder="Este día libre no sera descontado de tus vacaciones." />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-email">Precio</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="fas fa-money"></i></span>
                                <input type="text"
                                       id="basic-icon-default-email"
                                       class="form-control"
                                       placeholder="3000" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-email">Imágen</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="fas fa-photo"></i></span>
                                <input type="file"
                                       class="account-file-input"
                                       accept="image/png, image/jpeg" />
                            </div>
                        </div>
                        </br>
                        <button type="submit" class="btn btn-primary">Crear Recompensa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>