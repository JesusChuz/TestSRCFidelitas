@model sistema_reconocimiento.Models.Rewards


@{
    ViewData["Title"] = "Editar Recompensa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int points = ViewBag.GetPoints;
}
<div class="app-content content">
    <div class="content-wrapper">
        <h4 class="fw-bold py-3"><span class="text-muted fw-light">Recompensas/</span>Actualizar información</h4>
        <div class="row">
            <div class="col-xxl">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="card mb-2">
                                <h5 class="mb-0">Complete las información de la recompensa</h5>
                                <div class="card-body">
                                    <form asp-action="Editar_recompensa" enctype="multipart/form-data">
                                        <input type="hidden" asp-for="ID_Reward" />
                                        <div class="mb-3">
                                            <label class="form-label" for="basic-icon-default-name">Título</label>
                                            <div class="input-group input-group-merge">
                                                <span id="basic-icon-default-name" class="input-group-text">
                                                    <i class="fas fa-pen"></i>
                                                </span>
                                                <input asp-for="Reward_Name"
                                                       type="text"
                                                       class="form-control"
                                                       id="basic-icon-default-name" />
                                            </div>
                                            <span asp-validation-for="Reward_Name" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="basic-icon-default-lastname">Descripción</label>
                                            <div class="input-group input-group-merge">
                                                <span id="basic-icon-default-lastname" class="input-group-text">
                                                    <i class="fas fa-book"></i>
                                                </span>
                                                <input asp-for="Reward_Description"
                                                       type="text"
                                                       class="form-control"
                                                       id="basic-icon-default-lastname" />
                                            </div>
                                            <span asp-validation-for="Reward_Description" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="basic-icon-default-email">Precio</label>
                                            <div class="input-group input-group-merge">
                                                <span class="input-group-text"><i class="fas fa-money"></i></span>
                                                <input asp-for="Price"
                                                       type="text"
                                                       id="basic-icon-default-email"
                                                       class="form-control" />
                                            </div>
                                            <span class="text-danger">@ViewData["PriceE"]</span>
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="basic-icon-default-email">Imágen</label>
                                            <div class="input-group input-group-merge">
                                                <span class="input-group-text"><i class="fas fa-photo"></i></span>
                                                <input type="file" class="account-file-input" accept="image/png, image/jpeg" name="picture" />
                                            </div>
                                            @Html.ValidationMessageFor(model => model.PictureFile, "", new { @class = "text-danger" })
                                        </div>
                                        </br>
                                        <a class="btn btn-danger" asp-controller="Main" asp-action="Recompensas">Regresar</a>
                                        <button type="submit" class="btn btn-primary">Actualizar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xxl">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Información Actual</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-name">Título</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-name" class="input-group-text">
                                        <i class="fas fa-pen"></i>
                                    </span>
                                    <input asp-for="Reward_Name"
                                           type="text"
                                           class="form-control"
                                           id="basic-icon-default-name"
                                           disabled />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-lastname">Descripción</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-lastname" class="input-group-text">
                                        <i class="fas fa-book"></i>
                                    </span>
                                    <input asp-for="Reward_Description"
                                           type="text"
                                           class="form-control"
                                           id="basic-icon-default-lastname"
                                           disabled />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-email">Precio</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text"><i class="fas fa-money"></i></span>
                                    <input asp-for="Price"
                                           type="text"
                                           id="basic-icon-default-email"
                                           class="form-control"
                                           disabled />
                                </div>
                                <br />
                                <div class="mb-3">
                                    <label class="form-label" for="basic-icon-default-email">Imágen actual</label>
                                    <br />
                                    @if (!string.IsNullOrEmpty(Model.Base64Image))
                                    {
                                        <img class="card-img" src="data:image;base64,@Model.Base64Image" width="400" height="500" alt="Card image" />
                                    }
                                    else
                                    {
                                        <span>No se encontró ninguna imagen.</span>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
