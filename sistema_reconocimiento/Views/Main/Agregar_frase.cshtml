@{
    ViewData["Title"] = "Agregar Frase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-content content">
    <div class="card-body">
        <div class="col-md-6" style="float:none;margin:auto;">
            <div class="card mb-2">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Escribe la nueva frase</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-name">Frase</label>
                            <div class="input-group input-group-merge">
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-name"
                                       placeholder="Frase motivacional" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="input-group">
                                <label class="input-group-text" for="inputGroupSelect01">
                                    Estado
                                    <i class="bx bx-buildings"></i>
                                </label>
                                <select class="form-select" id="inputGroupSelect01">
                                    <option selected>Seleccionar...</option>
                                    <option value="1">Activa</option>
                                    <option value="2">Desactiva</option>
                                </select>
                            </div>
                        </div>
                        </br>
                        <button type="submit" class="btn btn-primary">Crear Frase</button>
                        <a asp-controller="Main" asp-action="Frases" class="btn btn-primary">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>