@model sistema_reconocimiento.Models.Engineers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Engineers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name_Engineer" class="control-label"></label>
                <input asp-for="Name_Engineer" class="form-control" />
                <span asp-validation-for="Name_Engineer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName_Engineer" class="control-label"></label>
                <input asp-for="LastName_Engineer" class="form-control" />
                <span asp-validation-for="LastName_Engineer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select asp-for="Position" class ="form-control" asp-items="ViewBag.Position"></select>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Account" class="control-label"></label>
                <select asp-for="ID_Account" class ="form-control" asp-items="ViewBag.ID_Account"></select>
            </div>
            <div class="form-group">
                <label asp-for="ID_Manager" class="control-label"></label>
                <select asp-for="ID_Manager" class ="form-control" asp-items="ViewBag.ID_Manager"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
